-- Services
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

-- Helper function to get all swords from player's backpack and character
local function getSwords()
    local swords = {}
    local player = Players.LocalPlayer
    local backpack = player.Backpack
    local character = player.Character

    -- Add swords from backpack
    for _, item in pairs(backpack:GetChildren()) do
        if item:IsA("Tool") then
            table.insert(swords, item)
        end
    end

    -- Add swords from character (equipped tools)
    for _, item in pairs(character:GetChildren()) do
        if item:IsA("Tool") then
            table.insert(swords, item)
        end
    end

    return swords
end


-- Action: Sword Spin (Spin swords around player)
other:Button("Sword Spin", function()
    local swords = getSwords() -- Get all swords from inventory
    local spinSpeed = 1
    local distance = 50
    local rotating = true

    -- Set initial properties of swords
    for i, sword in ipairs(swords) do
        sword.Parent = game.Players.LocalPlayer.Character -- Set sword to character
        sword.Handle.Massless = true
        sword.Handle.CanCollide = true
        sword.Grip = CFrame.new(0, 0, 0)
        local angle = (2 * math.pi / #swords) * i
        sword.Grip = sword.Grip * CFrame.Angles(0, angle, 0) * CFrame.new(distance * math.sin(angle), 0, distance * math.cos(angle))
    end

    -- Update sword positions to rotate around player
    local counter = 0
    RunService.RenderStepped:Connect(function()
        if rotating then
            counter = counter + 0.001 * spinSpeed
            for i, sword in ipairs(swords) do
                local angle = (2 * math.pi / #swords) * i + counter
                sword.Grip = CFrame.new(0, 0, 0) * CFrame.Angles(0, angle, 0) * CFrame.new(distance * math.sin(angle), 0, distance * math.cos(angle))
            end
        end
    end)

    -- Stop rotating when "x" is pressed
    local mouse = Players.LocalPlayer:GetMouse()
    mouse.KeyDown:Connect(function(key)
        if key == "x" then
            rotating = false
        end
    end)
end)

