local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local LocalPlayer = Players.LocalPlayer

-- Track toggle states to cleanly start/stop loops
local killAllActive = false
local walkSpeedActive = false
local grabToolsActive = false

-- Kill All Toggle
tgls:Toggle("Kill All", false, function(state)
    killAllActive = state
    if state then
        task.spawn(function()
            while killAllActive do
                for _, player in pairs(Players:GetPlayers()) do
                    if player ~= LocalPlayer and player.Character and player.Character:FindFirstChild("Humanoid") then
                        local targetRoot = player.Character:FindFirstChild("HumanoidRootPart")
                        local localRoot = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
                        if targetRoot and localRoot then
                            local distance = (localRoot.Position - targetRoot.Position).Magnitude
                            if distance < 1000 then
                                local sword = LocalPlayer.Backpack:FindFirstChild("sword") or LocalPlayer.Character:FindFirstChild("sword")
                                if sword and sword:FindFirstChild("Handle") and sword.Handle:FindFirstChild("dmg") then
                                    sword.Handle.dmg.RemoteEvent:FireServer(player.Character.Humanoid, math.huge)
                                end
                            end
                        end
                    end
                end
                wait(0.005)
            end
        end)
    end
end)

-- Drop Item on "F" key press
local function onKeyPress(key)
    if key:lower() == "f" then
        for _ = 1, 100 do
            ReplicatedStorage.Events.DropBagItem:FireServer("sword") -- Change item here
        end
    end
end

LocalPlayer:GetMouse().KeyDown:Connect(onKeyPress)

-- Grab All Tools
tgls:Toggle("Grab All Tools", false, function(state)
    grabToolsActive = state
    if state then
        task.spawn(function()
            while grabToolsActive do
                local toolName = "sword"
                local rootPart = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
                if not rootPart then return end

                for _, obj in pairs(workspace:GetDescendants()) do
                    if obj:IsA("Tool") and obj.Name == toolName and obj:FindFirstChild("Handle") then
                        local handle = obj.Handle
                        if handle:FindFirstChildOfClass("TouchTransmitter") then
                            firetouchinterest(rootPart, handle, 0)
                            firetouchinterest(rootPart, handle, 1)
                        end
                    end
                end
                wait(0.1)
            end
        end)
    end
end)

-- Loop WalkSpeed
tgls:Toggle("Loop WalkSpeed | 100", false, function(state)
    walkSpeedActive = state
    if state then
        task.spawn(function()
            while walkSpeedActive do
                if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid") then
                    LocalPlayer.Character.Humanoid.WalkSpeed = 100
                end
                wait()
            end
        end)
    end
end)

-- Destroy Effects GUI
local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")

uitab:Button("Destroy Effects GUI", function()
    -- Function to destroy the GUI named "passes"
    local function destroyPassesGui()
        -- Remove "passes" from StarterGui (prevents new players from cloning it)
        local starterPasses = StarterGui:FindFirstChild("passes")
        if starterPasses then
            starterPasses:Destroy()
        end

        -- Remove "passes" GUI from each player's PlayerGui
        for _, player in ipairs(Players:GetPlayers()) do
            local playerGui = player:FindFirstChild("PlayerGui")
            if playerGui then
                local passesGui = playerGui:FindFirstChild("passes")
                if passesGui then
                    passesGui:Destroy()
                end
            end
        end
    end

    -- Execute the GUI destruction function
    destroyPassesGui()
end)

