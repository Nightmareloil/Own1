    -- Respawn Button
    ------------------------------------------------
    sldrs:Button("Force Respawn", function()
        local plr = game.Players.LocalPlayer
        local character = plr.Character
        if character and character:FindFirstChild("HumanoidRootPart") and character:FindFirstChild("Humanoid") then
            local pos = character.HumanoidRootPart.CFrame
            local humanoid = character.Humanoid
            local clone = humanoid:Clone()
            humanoid:Destroy()
            clone.Parent = character
            clone.Health = 0
            task.wait(0.6)
            character:Destroy()
            plr.CharacterAdded:Wait()
            task.wait(0.1)
            local newChar = plr.Character
            if newChar and newChar:FindFirstChild("HumanoidRootPart") then
                newChar.HumanoidRootPart.CFrame = pos
            end
        end
    end)

    ------------------------------------------------
    -- God Mode Button
    ------------------------------------------------
    sldrs:Button("Instant GodMode", function()
        local plr = game.Players.LocalPlayer
        local character = plr.Character or plr.CharacterAdded:Wait()
        local humanoid = character:FindFirstChild("Humanoid")
        if humanoid then
            local sword = plr.Backpack:FindFirstChild("sword")
            if sword and sword:FindFirstChild("Handle") then
                local dmg = sword.Handle:FindFirstChild("dmg")
                if dmg then
                    local remoteEvent = dmg:FindFirstChild("RemoteEvent")
                    if remoteEvent then
                        remoteEvent:FireServer(humanoid, -math.huge)
                    end
                end
            end
        end
    end)

    ------------------------------------------------
    -- Permagod (Auto-Reapply) Toggle Button
    ------------------------------------------------
    sldrs:Button("Toggle Permagod", function()
        local plr = game.Players.LocalPlayer
        _G.permaGodActive = not _G.permaGodActive
        if _G.permaGodActive then
            task.spawn(function()
                while _G.permaGodActive do
                    local tool = plr.Backpack:FindFirstChild("sword") or plr.Character:FindFirstChild("sword")
                    if tool and tool:FindFirstChild("Handle") then
                        local dmg = tool.Handle:FindFirstChild("dmg")
                        if dmg then
                            local remoteEvent = dmg:FindFirstChild("RemoteEvent")
                            if remoteEvent then
                                remoteEvent:FireServer(plr.Character.Humanoid, -math.huge)
                            end
                        end
                    end
                    task.wait(1)  -- adjust this delay as needed
                end
            end)
        end
    end)
end

------------------------------------------------
-- Flame Colors Function
------------------------------------------------
local function applyFlameColors(colors, repeatCount)
    local eff = workspace:FindFirstChild("eff")
    if not eff then
        return
    end
    local event = eff:FindFirstChild("RemoteEvent")
    if not event then
        return
    end

    for _ = 1, repeatCount do
        for _, color in ipairs(colors) do
            event:FireServer(color)
            task.wait(0.0001)  -- Prevents excessive server requests
        end
    end
end

------------------------------------------------
-- Function to spawn and drop tools
------------------------------------------------
local function spawnAndDropTools()
    local player = game.Players.LocalPlayer
    if not player then
        return
    end

    -- Create the sword
    workspace.load.RemoteEvent:FireServer()
    task.wait(0.26)

    -- Move tools to character
    for _, tool in pairs(player.Backpack:GetChildren()) do
        tool.Parent = player.Character
    end

    -- Drop tools and tag them
    for _, tool in pairs(player.Character:GetChildren()) do
        if tool:IsA("Tool") then
            tool.Parent = workspace
            local tag = Instance.new("StringValue")
            tag.Name = "MineYesMine"
            tag.Parent = tool
        end
    end
end

------------------------------------------------
-- Cleanup function for tagged tools
------------------------------------------------
local function cleanUpTags()
    for _, tool in pairs(game.Players.LocalPlayer.Backpack:GetChildren()) do
        local tag = tool:FindFirstChild("MineYesMine")
        if tag then 
            tag:Destroy() 
        end
    end
end

------------------------------------------------
-- UI Button function for flame effects
------------------------------------------------
local function flameEffectButton(label, colors, colorLoops, effectLoops)
    if not effects or type(effects.Button) ~= "function" then
        return
    end

    effects:Button(label, function()
        for _ = 1, effectLoops do
            applyFlameColors(colors, colorLoops)
            task.wait(0.0001)
            spawnAndDropTools()
        end
        cleanUpTags()
    end)
end

