other:Button("Sword Halo", function()
    local player = game.Players.LocalPlayer
    local character = player.Character
    if not character then return end

    -- For R15, the Head is the best reference point.
    local head = character:FindFirstChild("Head")
    if not head then return end

    local swords = getSwords() -- Get all swords from inventory
    if #swords == 0 then return end

    -- Default sword grip (as provided)
    local defaultGrip = CFrame.new(0, -0.15, 2, 
        1, 0, 0, 
        0, 0.0075545907, 0.999971449, 
        0, -0.999971449, 0.0075545907)

    -- Provided world pivot transformation
    local worldPivot = CFrame.new(-49.3861542, 30.882246, 19.850544, 
        0.828063488,  0.560480714,  -0.0131223798, 
       -0.0103367567, -0.00813901424, -0.999913454, 
       -0.560539007,  0.828127503, -0.000946044922)

    -- Halo settings:
    local haloRadius = 5                -- Horizontal radius of the halo
    local haloHeight = head.Size.Y/2 + 3  -- Vertical offset above the head's center (adjust as needed)
    local angleStep = 360 / #swords      -- Angle between each sword in the circle

    for i, sword in ipairs(swords) do
        sword.Parent = character  -- Attach sword to the character

        -- Calculate angle (in radians) for this sword
        local angle = math.rad(angleStep * (i - 1))

        -- Compute the circular offset relative to the head:
        local offset = CFrame.new(math.cos(angle) * haloRadius, haloHeight, math.sin(angle) * haloRadius)
        
        -- Rotate so that the sword faces outward (adjust the Z rotation if needed)
        local rotation = CFrame.Angles(0, angle, math.rad(90))
        
        -- Desired world-space transform for the sword
        local desiredCFrame = head.CFrame * offset * rotation

        -- Convert from world space to the local space the tool expects by offsetting via worldPivot,
        -- then reapply the default grip.
        local finalGrip = worldPivot:Inverse() * desiredCFrame * defaultGrip
        
        sword.Grip = finalGrip
    end
end)


other:Button("Sword Shoulder", function()
    local player = game.Players.LocalPlayer
    local character = player.Character
    local backpack = player.Backpack

    local function getSwords()
        local swords = {}
        for _, tool in pairs(backpack:GetChildren()) do
            if tool:IsA("Tool") then table.insert(swords, tool) end
        end
        for _, tool in pairs(character:GetChildren()) do
            if tool:IsA("Tool") then table.insert(swords, tool) end
        end
        return swords
    end

    local swordPositions = {
        CFrame.new(-2.4, 2.3, 2.3) * CFrame.Angles(0, 0, math.rad(-45)),
        CFrame.new(0, 2.3, 3.1) * CFrame.Angles(0, 0, 0),
        CFrame.new(2.4, 2.3, 2.3) * CFrame.Angles(0, 0, math.rad(45)),
        CFrame.new(-2.4, 0, 3.1) * CFrame.Angles(0, 0, math.rad(-25)),
        CFrame.new(0, 0, 3.6),
        CFrame.new(2.4, 0, 3.1) * CFrame.Angles(0, 0, math.rad(25)),
        CFrame.new(-2.4, -2.3, 2.3) * CFrame.Angles(0, 0, math.rad(-45)),
        CFrame.new(0, -2.3, 3.1),
        CFrame.new(2.4, -2.3, 2.3) * CFrame.Angles(0, 0, math.rad(45)),
        CFrame.new(2.4, 2.3, -2.3) * CFrame.Angles(0, math.rad(180), math.rad(-45)),
        CFrame.new(0, 2.3, -3.1) * CFrame.Angles(0, math.rad(180), 0),
        CFrame.new(-2.4, 2.3, -2.3) * CFrame.Angles(0, math.rad(180), math.rad(45)),
        CFrame.new(2.4, 0, -3.1) * CFrame.Angles(0, math.rad(180), math.rad(-25)),
        CFrame.new(0, 0, -3.6) * CFrame.Angles(0, math.rad(180), 0),
        CFrame.new(-2.4, 0, -3.1) * CFrame.Angles(0, math.rad(180), math.rad(25)),
        CFrame.new(2.4, -2.3, -2.3) * CFrame.Angles(0, math.rad(180), math.rad(-45)),
        CFrame.new(0, -2.3, -3.1) * CFrame.Angles(0, math.rad(180), 0),
        CFrame.new(-2.4, -2.3, -2.3) * CFrame.Angles(0, math.rad(180), math.rad(45)),
    }

    local swords = getSwords()
    for i, sword in ipairs(swords) do
        local pos = swordPositions[i]
        if not pos then break end

        sword.Parent = backpack
        sword.Handle.Massless = true
        sword.Handle.CanCollide = false
        sword.Grip = pos
        sword.Parent = character
    end
end)

