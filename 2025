-----------------------------------------
-- Sword Power Functions
-----------------------------------------
local Players = game:GetService("Players")
local localPlayer = Players.LocalPlayer

-- Utility: Move all sword tools from backpack to character
local function moveSwordsToCharacter()
    local character = localPlayer.Character or localPlayer.CharacterAdded:Wait()
    for _, tool in ipairs(localPlayer.Backpack:GetChildren()) do
        if tool:IsA("Tool") and tool.Name:lower():find("sword") then
            tool.Parent = character
        end
    end
    return character
end

-- Function: Fire the remote event enough times to "charge" the sword (targetPower)
local function giveSwordPower(sword, targetPower)
    local handle = sword:FindFirstChild("Handle")
    if not handle then return end

    local up = handle:FindFirstChild("up")
    if not up then return end

    local remoteEvent = up:FindFirstChild("RemoteEvent")
    if not remoteEvent then return end

    local powerPerCall = 10
    local callsNeeded = math.ceil(targetPower / powerPerCall)
    for _ = 1, callsNeeded do
        remoteEvent:FireServer()
        task.wait(0.4)
    end
end

-- Function: Attach activation so that when a sword tool is activated it applies power
local function attachSwordActivation(targetPower)
    local character = moveSwordsToCharacter()
    for _, sword in ipairs(character:GetChildren()) do
        if sword:IsA("Tool") and sword.Name:lower():find("sword") then
            if sword.Activated and not sword:FindFirstChild("ActivationAttached") then
                local marker = Instance.new("BoolValue")
                marker.Name = "ActivationAttached"
                marker.Parent = sword
                sword.Activated:Connect(function()
                    giveSwordPower(sword, targetPower)
                end)
            end
        end
    end
end

-- Function: Continuously "charge" the sword in batches on a recurring interval
local function activateContinuousSwordPower(interval, targetPower)
    local character = moveSwordsToCharacter()
    local sword

    for _, item in ipairs(character:GetChildren()) do
        if item:IsA("Tool") and item.Name:lower():find("sword") then
            sword = item
            break
        end
    end

    if not sword then return end

    local handle = sword:FindFirstChild("Handle")
    if not handle then return end

    local up = handle:FindFirstChild("up")
    if not up then return end

    local remoteEvent = up:FindFirstChild("RemoteEvent")
    if not remoteEvent then return end

    local powerPerCall = 10
    local batchSize = math.ceil(targetPower / powerPerCall)

    _G.continuousPowerActive = true
    task.spawn(function()
        while _G.continuousPowerActive do
            for _ = 1, batchSize do
                remoteEvent:FireServer()
                task.wait(0.4)
            end
            task.wait(interval)
        end
    end)
end

