-- Demon Hub 2025 --
-- Notification Sound
local function playNotificationSound(soundId, volume)
    local sound = Instance.new("Sound")
    sound.Volume = volume or 5 -- Default volume
    sound.SoundId = soundId
    sound.Looped = false
    sound.Parent = workspace
    sound:Play()
end

-- Play the notification sound
playNotificationSound("rbxassetid://570433034", 10)

-- Load UI Library
local function loadUILibrary(url)
    return loadstring(game:HttpGet(url))()
end

local DiscordLib = loadUILibrary("https://raw.githubusercontent.com/dawid-scripts/UI-Libs/main/discord%20lib.txt")
