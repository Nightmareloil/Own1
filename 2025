        local soundCount = 0

        local function removeSounds(container)
            for _, descendant in ipairs(container:GetDescendants()) do
                if descendant:IsA("Sound") then
                    descendant:Stop()
                    descendant:Destroy()
                    soundCount = soundCount + 1
                end
            end
        end

        removeSounds(workspace) -- original
        removeSounds(game:GetService("SoundService")) -- now also removes music from buttons!
    end)
end

-- Sound playing function (with Volume set to 1)
function playSound(soundId, looped)
    local sound = Instance.new("Sound")
    sound.SoundId = "rbxassetid://" .. soundId
    sound.Looped = looped or false
    sound.Volume = 1 -- 🔊 this makes the sound audible
    sound.Parent = game:GetService("SoundService")
    sound:Play()

    if not sound.Looped then
        sound.Ended:Connect(function()
            sound:Destroy()
        end)
    end
end

