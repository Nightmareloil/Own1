--------------------------------------------------
-- Helper Functions
--------------------------------------------------

-- Removes unwanted visual effects from a tool’s Handle.
local function cleanToolEffects(tool)
    local handle = tool:FindFirstChild("Handle")
    if handle then
        for _, child in pairs(handle:GetChildren()) do
            if child:IsA("ParticleEmitter") or child:IsA("Trail") or child:IsA("Mesh") then
                child:Destroy()
            end
        end
    end
end

-- Moves all Tools from a source container (Character or similar) to a destination container.
local function moveTools(source, destination)
    for _, item in ipairs(source:GetChildren()) do
        if item:IsA("Tool") then
            item.Parent = destination
        end
    end
end

--------------------------------------------------
-- Button: Fortress Formation
-- (Arranges swords/tools in a spacious grid formation)
--------------------------------------------------

other:Button("Fortress Formation", function()
    local player = game.Players.LocalPlayer
    local character = player.Character
    local backpack = player.Backpack

    if not character or not backpack then
        return
    end

    -- First, ensure that all currently equipped tools are in the backpack.
    moveTools(character, backpack)

    local tools = backpack:GetChildren()
    if #tools == 0 then
        return
    end

    -- Grid settings (spacious formation)
    local toolsPerRow = 8
    local rowHeight = 1.5
    local columnSpacing = 5.5
    local currentRow = 0
    local currentColumn = 0

    for _, tool in ipairs(tools) do
        if tool:IsA("Tool") then
            -- Calculate grid position.
            local posX = currentColumn * columnSpacing
            local posY = -currentRow * rowHeight
            tool.GripPos = Vector3.new(posX, posY, 0)
            tool.GripUp = Vector3.new(0, 1, 0)

            -- Parent the tool to the character so it can be readily used.
            tool.Parent = character

            -- Clean up unwanted particle effects, trails, or meshes.
            cleanToolEffects(tool)

            -- Update the grid: move to the next column, or next row if we've reached the end.
            currentColumn = currentColumn + 1
            if currentColumn >= toolsPerRow then
                currentColumn = 0
                currentRow = currentRow + 1
            end
        end
    end
end)

--------------------------------------------------
-- Button: Boxer Formation
-- (Arranges swords/tools in a tight, compact grid formation)
--------------------------------------------------

other:Button("Boxer Formation", function()
    local player = game.Players.LocalPlayer
    local character = player.Character
    local backpack = player.Backpack

    if not character or not backpack then
        return
    end

    -- Move all equipped tools back to the backpack.
    moveTools(character, backpack)

    local tools = backpack:GetChildren()
    if #tools == 0 then
        return
    end

    -- Grid settings (compact formation)
    local itemsPerRow = 8
    local horizontalSpacing = 0.8
    local verticalSpacing = 1.5
    local offsetX, offsetY, offsetZ = 0, 0, 0
    local columnCount = 0

    for _, tool in ipairs(tools) do
        if tool:IsA("Tool") then
            tool.GripPos = Vector3.new(offsetX, offsetY, offsetZ)
            tool.GripUp = Vector3.new(0, 1, 0)  -- Standard orientation.
            tool.Parent = character

            -- Clean out unwanted visual effects on the tool's handle.
            cleanToolEffects(tool)

            -- Update the horizontal offset and column counter.
            offsetX = offsetX + horizontalSpacing
            columnCount = columnCount + 1

            -- When a row is full, reset X and move down vertically.
            if columnCount >= itemsPerRow then
                offsetX = 0
                offsetY = offsetY - verticalSpacing
                columnCount = 0
            end
        end
    end
end)

